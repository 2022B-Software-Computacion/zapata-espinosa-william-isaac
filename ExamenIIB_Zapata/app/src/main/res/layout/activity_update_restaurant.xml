<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateRestaurant">

    ]<TextView
        android:id="@+id/tvTitleUpdateRestaurant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update information"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <EditText
        android:inputType="text"
        android:id="@+id/etNameRestaurantUpdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name"
        app:layout_constraintTop_toBottomOf="@+id/tvTitleUpdateRestaurant"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp"/>

    <EditText
        android:inputType="date"
        android:id="@+id/etOpeningDateRestaurantUpdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etNameRestaurantUpdate"
        android:hint="Opening Date"/>

    <EditText
        android:inputType="numberDecimal"
        android:id="@+id/etRatingRestaurantUpdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etOpeningDateRestaurantUpdate"
        android:hint="Rating"/>

    <EditText
        android:inputType="text"
        android:id="@+id/etAvailableRestaurantUpdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Available"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etRatingRestaurantUpdate"/>

    <Button
        android:id="@+id/btnRestaurantUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etAvailableRestaurantUpdate"
        android:text="Update"
        android:layout_marginTop="24dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>